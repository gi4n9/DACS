{{!-- Main collection container --}}
<div class="container-fluid mt-4">
    <div class="row g-4">
        {{!-- Left sidebar with filters --}}
        <div class="col-md-3 col-lg-2">
            {{!-- Size filter --}}
            <div class="card mb-3 border-0 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center bg-white border-0"
                    data-bs-toggle="collapse" data-bs-target="#kichCo" style="cursor: pointer;">
                    <h6 class="mb-0">Kích cỡ</h6>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div id="kichCo" class="collapse">
                    <div class="card-body pt-2 pb-2">
                        <div class="d-flex flex-wrap gap-2">
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_XS" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm rounded-1" for="size_XS">XS</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_S" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm rounded-1" for="size_S">S</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_M" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm rounded-1" for="size_M">M</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_L" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm rounded-1" for="size_L">L</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_XL" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm rounded-1" for="size_XL">XL</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_2XL" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm rounded-1" for="size_2XL">2XL</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_3XL" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm rounded-1" for="size_3XL">3XL</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_4XL" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm rounded-1" for="size_4XL">4XL</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Color filter --}}
            <div class="card mb-3 border-0 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center bg-white border-0"
                    data-bs-toggle="collapse" data-bs-target="#mauSac" style="cursor: pointer;">
                    <h6 class="mb-0">Màu sắc</h6>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div id="mauSac" class="collapse">
                    <div class="card-body pt-2 pb-2">
                        <div class="d-flex flex-wrap gap-2">
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_do" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_do">
                                    <span class="rounded-circle mb-1"
                                        style="width: 24px; height: 24px; background-color: #f00808; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Đỏ</small>
                                </label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_den" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_den">
                                    <span class="rounded-circle mb-1"
                                        style="width: 24px; height: 24px; background-color: #000; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Đen</small>
                                </label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_xam" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_xam">
                                    <span class="rounded-circle mb-1"
                                        style="width: 24px; height: 24px; background-color: #808080; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Xám</small>
                                </label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_trang" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_trang">
                                    <span class="rounded-circle mb-1"
                                        style="width: 24px; height: 24px; background-color: #fff; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Trắng</small>
                                </label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_be" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_be">
                                    <span class="rounded-circle mb-1"
                                        style="width: 24px; height: 24px; background-color: #e8d6b3; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Be</small>
                                </label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_xanhduong"
                                    autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_xanhduong">
                                    <span class="rounded-circle mb-1"
                                        style="width: 24px; height: 24px; background-color: #0d47a1; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Xanh lam</small>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Right side - Products --}}
        <div class="col-md-9 col-lg-10">
            {{!-- Breadcrumb --}}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    {{#each breadcrumbs}}
                    <li class="breadcrumb-item">
                        {{#if url}}
                        <a href="{{url}}" class="text-secondary text-decoration-none">{{name}}</a>
                        {{else}}
                        <span class="active fw-bold text-dark">{{name}}</span>
                        {{/if}}
                    </li>
                    {{/each}}
                </ol>
            </nav>

            {{!-- Collection title --}}
            <h2 class="mb-4">{{category.name}}</h2>

            {{!-- Products count and sorting --}}
            <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-secondary">{{products.length}} kết quả</span>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="sortDropdown"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        Mặc định
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                        <li><a class="dropdown-item" href="#">Mặc định</a></li>
                        <li><a class="dropdown-item" href="#">Giá: Thấp đến cao</a></li>
                        <li><a class="dropdown-item" href="#">Giá: Cao đến thấp</a></li>
                        <li><a class="dropdown-item" href="#">Bán chạy nhất</a></li>
                    </ul>
                </div>
            </div>

            {{!-- Hiển thị thông báo nếu không có sản phẩm --}}
            {{#if noProductsMessage}}
            <div class="alert alert-info" role="alert">
                {{noProductsMessage}}
            </div>
            {{/if}}

            {{!-- Products grid --}}
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                {{#each products}}
                <div class="col">
                    <a href="/product/{{id}}" class="text-decoration-none">
                        <div class="card border-0 rounded-3 shadow-sm h-100">
                            <div class="position-relative">
                                {{#if discount}}
                                <div
                                    class="position-absolute top-0 end-0 bg-dark text-white px-2 py-1 m-2 small rounded-1">
                                    -{{discount}}%
                                </div>
                                {{/if}}
                                {{#if images}}
                                <img src="{{images.[0]}}" class="card-img-top rounded-top-3" alt="{{name}}">
                                {{/if}}
                            </div>
                            <div class="card-body p-3">
                                <h6 class="card-title text-dark mb-2">{{name}}</h6>
                                <p class="card-text mb-2">
                                    <span class="text-danger fw-bold">{{price}}</span>
                                    {{#if oldPrice}}
                                    <span
                                        class="text-secondary text-decoration-line-through small ms-2">{{oldPrice}}</span>
                                    {{/if}}
                                </p>
                                <div class="d-flex gap-1">
                                    {{#each colors}}
                                    <span class="rounded-circle border d-inline-block"
                                        style="width: 20px; height: 20px; background-color: {{this}};"></span>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<!-- Link CSS -->
<link rel="stylesheet" href="/css/collection-id.css">

<!-- Link JavaScript -->
<script src="/js/collection-id.js" defer></script>