{{!-- Main collection container --}}
<div class="container-fluid mt-4">
    <div class="row">
        {{!-- Left sidebar with filters --}}
        <div class="col-md-3">
            {{!-- Suitable for filter --}}
            <div class="card mb-3 border-0">
                <div class="card-header d-flex justify-content-between align-items-center bg-light border-0" data-bs-toggle="collapse" data-bs-target="#phuHopVoi" style="cursor: pointer;">
                    <h6 class="mb-0">Phù hợp với</h6>
                    <i class="fas fa-chevron-up"></i>
                </div>
                <div id="phuHopVoi" class="collapse show">
                    <div class="card-body pt-2 pb-0">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="phuHopVoi" id="homeWear">
                            <label class="form-check-label" for="homeWear">Mặc ở nhà</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="phuHopVoi" id="dailyWear">
                            <label class="form-check-label" for="dailyWear">Mặc hàng ngày</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="phuHopVoi" id="sportsWear">
                            <label class="form-check-label" for="sportsWear">Thể thao</label>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Size filter --}}
            <div class="card mb-3 border-0">
                <div class="card-header d-flex justify-content-between align-items-center bg-light border-0" data-bs-toggle="collapse" data-bs-target="#kichCo" style="cursor: pointer;">
                    <h6 class="mb-0">Kích cỡ</h6>
                    <i class="fas fa-chevron-up"></i>
                </div>
                <div id="kichCo" class="collapse show">
                    <div class="card-body pt-2 pb-0">
                        <div class="d-flex flex-wrap gap-2">
                            {{#each sizes}}
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_{{this}}" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_{{this}}">{{this}}</label>
                            </div>
                            {{else}}
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_XS" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_XS">XS</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_S" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_S">S</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_M" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_M">M</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_L" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_L">L</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_XL" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_XL">XL</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_2XL" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_2XL">2XL</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_3XL" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_3XL">3XL</label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="size" id="size_4XL" autocomplete="off">
                                <label class="btn btn-outline-primary btn-sm" for="size_4XL">4XL</label>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Color filter --}}
            <div class="card mb-3 border-0">
                <div class="card-header d-flex justify-content-between align-items-center bg-light border-0" data-bs-toggle="collapse" data-bs-target="#mauSac" style="cursor: pointer;">
                    <h6 class="mb-0">Màu sắc</h6>
                    <i class="fas fa-chevron-up"></i>
                </div>
                <div id="mauSac" class="collapse show">
                    <div class="card-body pt-2 pb-0">
                        <div class="d-flex flex-wrap gap-3">
                            {{#each colors}}
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_{{this.value}}" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_{{this.value}}">
                                    <span class="rounded-circle mb-1" style="width: 30px; height: 30px; background-color: {{this.hex}}; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>{{this.name}}</small>
                                </label>
                            </div>
                            {{else}}
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_do" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_do">
                                    <span class="rounded-circle mb-1" style="width: 30px; height: 30px; background-color: #f00808; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Đỏ</small>
                                </label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_den" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_den">
                                    <span class="rounded-circle mb-1" style="width: 30px; height: 30px; background-color: #000; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Đen</small>
                                </label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_xam" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_xam">
                                    <span class="rounded-circle mb-1" style="width: 30px; height: 30px; background-color: #808080; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Xám</small>
                                </label>
                            </div>
                            <div>
                                <input type="radio" class="btn-check" name="color" id="color_trang" autocomplete="off">
                                <label class="d-flex flex-column align-items-center" for="color_trang">
                                    <span class="rounded-circle mb-1" style="width: 30px; height: 30px; background-color: #fff; border: 1px solid #ddd; display: inline-block;"></span>
                                    <small>Trắng</small>
                                </label>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Material filter --}}
            <div class="card mb-3 border-0">
                <div class="card-header d-flex justify-content-between align-items-center bg-light border-0" data-bs-toggle="collapse" data-bs-target="#chatLieu" style="cursor: pointer;">
                    <h6 class="mb-0">Chất liệu</h6>
                    <i class="fas fa-chevron-up"></i>
                </div>
                <div id="chatLieu" class="collapse show">
                    <div class="card-body pt-2 pb-0">
                        {{#each materials}}
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="material" id="material_{{this.value}}">
                            <label class="form-check-label" for="material_{{this.value}}">{{this.name}}</label>
                        </div>
                        {{else}}
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="material" id="material_cotton">
                            <label class="form-check-label" for="material_cotton">Vải Cotton</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="material" id="material_excool">
                            <label class="form-check-label" for="material_excool">Vải Excool</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="material" id="material_graphene">
                            <label class="form-check-label" for="material_graphene">Vải Graphene</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="material" id="material_modal">
                            <label class="form-check-label" for="material_modal">Vải Modal</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="material" id="material_polyester">
                            <label class="form-check-label" for="material_polyester">Vải Polyester</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="material" id="material_recycle">
                            <label class="form-check-label" for="material_recycle">Vải Recycle</label>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

        {{!-- Right side - Products --}}
        <div class="col-md-9">
            {{!-- Breadcrumb --}}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/" class="text-dark text-decoration-none">Trang chủ</a></li>
                    <li class="breadcrumb-item active fw-bold text-dark" aria-current="page">Bộ sưu tập</li>
                </ol>
            </nav>

            {{!-- Collection title --}}
            <h1 class="mb-4">{{collectionTitle}}</h1>

            {{!-- Products grid --}}
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                {{#each products}}
                <div class="col">
                    <a href="/product/{{this.id}}" class="text-decoration-none">
                        <div class="card border-0 rounded-0 h-100">
                            <div class="position-relative">
                                {{#if this.discount}}
                                <span class="position-absolute top-0 end-0 bg-primary text-white m-2 px-2 py-1 small rounded-1">{{this.discount}}</span>
                                {{/if}}
                                <img src="{{this.image}}" class="card-img-top rounded-0" alt="{{this.name}}">
                            </div>
                            <div class="card-body p-2">
                                <h6 class="card-title fw-normal text-dark">{{this.name}}</h6>
                                <p class="card-text mb-1">
                                    <span class="text-danger fw-bold">{{this.price}}</span>
                                    {{#if this.discount}}
                                    <span class="text-secondary text-decoration-line-through small ms-1">{{this.oldPrice}}</span>
                                    {{/if}}
                                </p>
                                <div class="d-flex gap-1">
                                    {{#each this.colors}}
                                    <img src="{{this}}" alt="Color variant" class="rounded-circle border" style="width: 20px; height: 20px;">
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                {{else}}
                {{!-- Sample products for when no products are passed --}}
                <div class="col">
                    <a href="#" class="text-decoration-none">
                        <div class="card border-0 rounded-0 h-100">
                            <div class="position-relative">
                                <span class="position-absolute top-0 end-0 bg-primary text-white m-2 px-2 py-1 small rounded-1">-20%</span>
                                <img src="https://via.placeholder.com/300x400" class="card-img-top rounded-0" alt="Sample product">
                            </div>
                            <div class="card-body p-2">
                                <h6 class="card-title fw-normal text-dark">Áo thun nam</h6>
                                <p class="card-text mb-1">
                                    <span class="text-danger fw-bold">299.000₫</span>
                                    <span class="text-secondary text-decoration-line-through small ms-1">349.000₫</span>
                                </p>
                                <div class="d-flex gap-1">
                                    <span class="rounded-circle border d-inline-block" style="width: 20px; height: 20px; background-color: black;"></span>
                                    <span class="rounded-circle border d-inline-block" style="width: 20px; height: 20px; background-color: white;"></span>
                                    <span class="rounded-circle border d-inline-block" style="width: 20px; height: 20px; background-color: gray;"></span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<!-- Link CSS -->
<link rel="stylesheet" href="/css/collection-id.css">

<!-- Link JavaScript -->
<script src="/js/collection-id.js" defer></script>
