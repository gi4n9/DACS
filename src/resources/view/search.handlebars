<div class="container-fluid px-4 mt-4">
    {{!-- Breadcrumb --}}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            {{#each breadcrumbs}}
            <li class="breadcrumb-item">
                {{#if url}}
                <a href="{{url}}" class="text-secondary text-decoration-none">{{name}}</a>
                {{else}}
                <span class="active fw-bold text-dark">{{name}}</span>
                {{/if}}
            </li>
            {{/each}}
        </ol>
    </nav>

    {{!-- Collection title --}}
    <h2 class="text-start mb-5 ps-2">Kết quả</h2>

    {{!-- Divider --}}
    <hr class="text-secondary opacity-25 mb-4">

    {{!-- Products grid --}}
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
        {{#each products}}
        <div class="col">
            <a href="/product/{{id}}" class="text-decoration-none">
                <div class="card border-0 rounded-3 shadow-sm h-100">
                    <div class="position-relative">
                        {{#if discount}}
                        <div class="position-absolute top-0 end-0 bg-dark text-white px-2 py-1 m-2 small rounded-1">
                            -{{discount}}
                        </div>
                        {{/if}}
                        {{#if images}}
                        <img src="{{images.[0]}}" class="card-img-top rounded-top-3" alt="{{name}}">
                        {{/if}}
                    </div>
                    <div class="card-body p-3">
                        <h6 class="card-title text-dark mb-2">{{name}}</h6>
                        <p class="card-text mb-2">
                            <span class="text-danger fw-bold">{{price}}</span>
                            {{#if oldPrice}}
                            <span class="text-secondary text-decoration-line-through small ms-2">{{oldPrice}}</span>
                            {{/if}}
                        </p>
                        <div class="d-flex gap-1">
                            {{#each colors}}
                            <span class="rounded-circle border d-inline-block" 
                                  style="width: 20px; height: 20px; background-color: {{this}};"></span>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1) !important;
    }
</style>