<section class="hero-banner">
  <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/img/Hero_Banner_-_Desktop_do_lot.webp" class="d-block w-100" alt="Banner 1" />
      </div>
      <div class="carousel-item">
        <img src="/img/Hero_Banner_-_Desktop_run.webp" class="d-block w-100" alt="Banner 2" />
      </div>
      <div class="carousel-item">
        <img src="/img/Hero_Banner_-_Desktop_udw.webp" class="d-block w-100" alt="Banner 3" />
      </div>
      <div class="carousel-item">
        <img src="/img/Hero_Banner_-_Desktopak.webp" class="d-block w-100" alt="Banner 4" />
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev"
      style="height:fit-content; width: 80px; top: 40%;">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden text-black">Trước</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next"
      style="width: 80px; height:fit-content; top: 40%;">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Sau</span>
    </button>
  </div>
</section>

<section class="categories-section">
  <div class="container-categories">
    <div class="category-sex">
      <h2 style="font-family: 'MightiestFont', sans-serif; font-weight: 500; font-size: 50px;">
        ĐỒ NAM
      </h2>
    </div>
    <div class="categories-wrapper">
      <button class="nav-btn prev-btn">&lt;</button>
      <div class="categories-container">
        {{#each categories}}
        <div class="category">
          {{#if this.children.length}}
          <div class="category-items">
            {{#each this.children}}
            <div class="category-item animate">
              <img src="/img/image-cate-ao-thun.webp" alt="{{this.name}}" class="img-fluid rounded-4" />
              <p class="mt-2" style="font-family: NorthCarossela; font-size: 25px; font-weight: 100;">
                {{this.name}}
              </p>
            </div>
            {{/each}}
          </div>
          {{/if}}
        </div>
        {{else}}
        <p>Không có danh mục nào để hiển thị.</p>
        {{/each}}
      </div>
      <button class="nav-btn next-btn">&gt;</button>
    </div>
  </div>
</section>

