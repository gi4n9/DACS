<div class="row">
    <!-- Hình ảnh sản phẩm -->
    <div class="col-md-6">
        <img src="{{product.image}}" class="img-fluid rounded shadow" alt="{{product.name}}">
        <div class="mt-3">
            <h5>Ảnh chi tiết</h5>
            <img src="{{product.image}}" class="img-thumbnail" alt="Ảnh chi tiết 1">
            <!-- Nếu có thêm ảnh chi tiết -->
            {{#each product.additionalImages}}
                <img src="{{this}}" class="img-thumbnail" alt="Ảnh chi tiết thêm">
            {{/each}}
        </div>
    </div>

    <!-- Thông tin sản phẩm -->
    <div class="col-md-6">
        <h1 class="fw-bold">{{product.name}}</h1>
        <p class="text-muted"><s>{{product.oldPrice}}</s></p>
        <p class="fs-4 text-danger">{{product.price}} <span class="badge bg-danger">{{product.discount}}</span></p>
        <p><strong>Vải:</strong> {{product.description}}</p>
        <p class="text-warning"><i class="bi bi-truck"></i> {{product.shipping}}</p>

        <!-- Màu sắc -->
        <div class="mb-3">
            <p><strong>Màu sắc:</strong></p>
            <div class="d-flex">
                {{#each product.colors}}
                    <button class="btn btn-outline-dark me-2" style="background-color: {{this}}; width: 40px; height: 40px;" title="Chọn màu {{this}}"></button>
                {{/each}}
            </div>
        </div>

        <!-- Kích thước áo -->
        <div class="mb-3">
            <p><strong>Kích thước:</strong></p>
            <div class="d-flex">
                {{#each product.sizes}}
                    <button class="btn btn-outline-dark btn-sm me-2">{{this}}</button>
                {{/each}}
            </div>
        </div>

        <!-- Nút mua hàng -->
        <button class="btn btn-dark w-100">Chọn kích thước áo</button>
    </div>
</div>
