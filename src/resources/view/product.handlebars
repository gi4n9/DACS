<!-- Product Page with Bootstrap -->
<section class="py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="http://localhost:3000/" class="text-dark text-decoration-none">Trang chủ</a></li>
                <li class="breadcrumb-item fw-bold text-dark" aria-current="page">Áo In Hình</li>
